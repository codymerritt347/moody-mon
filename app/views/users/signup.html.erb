<h1>Signup</h1>
<div class="form-container">
  <form method="POST" action="/signup">
    <div class="form-group">
      <label for="first_name">First Name:</label>
      <input type="text" name="user[first_name]" id="first_name" class="form-control">
      <br>
      <label for="last_name">Last Name:</label>
      <input type="text" name="user[last_name]" id="last_name" class="form-control">
      <br>
      <label for="email">Email:</label>
      <input type="email" name="user[email]" id="email" class="form-control">
      <br>
      <label for="password">Password:</label>
      <input type="password" name="user[password]" id="password" class="form-control">
      <br>
      <%# <label for="password-confirmation">Password Confirmation:</label>
      <input type="password" name="user[password-confirmation]" id="password-confirmation" class="form-control">
      <br> %>
      <label for="hometown">Hometown:</label>
      <input type="text" name="user[hometown]" id="hometown" class="form-control">
      <br>
      <label for="favorite-food">Favorite Food:</label>
      <input type="text" name="user[favorite_food]" id="favorite-food" class="form-control">
    </div>
    <input type="submit" value="Sign Up!">
  </form>
</div>