<div class="window main">
<h1><%= @monster.name %></h1>

<label>Level:</label>
<%= @monster.level %>
<br>
<label>Exp Points:</label>
<%= @monster.exp_points %>
<br>
<label>Until next level...</label><br>
<progress value = "<%= @monster.exp_points %>" max = "100"></progress>
<%= @monster.exp_points %> / 100
<br><br>
<div class="button">
<a href="/monsters/<%= @monster.id %>/edit">EDIT MONSTER</a>
</div>
<div class="button">
<form method="POST" action="/monsters/<%=@monster.id%>">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="DELETE MONSTER">
</form>
</div>
<div class="button">
<a href="/users/<%= @user.id %>">BACK TO USER</a>
</div>